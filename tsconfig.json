{
	"extends": "eslint-config-bamboo",
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es2019",
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"types": ["node", "node-fetch", "discord.js", "klasa"]
	},
	"include": ["./src/**/*", "__tests__/**/*"],
	"exclude": ["node_modules", "**/dist"]
}
