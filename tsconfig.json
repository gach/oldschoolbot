{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"pretty": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",

		"tsBuildInfoFile": "../dist/.tsbuildinfo",
		"rootDir": ".",
		"removeComments": true,

		"outDir": "../dist",
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,
		"types": ["node", "node-fetch", "discord.js", "klasa", "jest"],
		"esModuleInterop": true
	},
	"include": ["."]
}
